%%BeginProlog

/initialize {
	75 25.1 div dup scale
} def

/box {
	[/grayscale /on /radius /size /y /x]
	dup length 0 add dict begin {exch def} forall
		gsave
			x y translate
			radius 0 moveto
			size 0 size size radius arct
			size size 0 size radius arct
			0 size 0 0 radius arct
			0 0 size 0 radius arct
			closepath
			gsave
				on {grayscale} {1} ifelse
				setgray fill
			grestore
			stroke
		grestore
	end
} def

/boxRow {
	[/data /space /grayscale /radius /size /y /x]
	dup length 1 add dict begin {exch def} forall
		gsave
			x y translate
			0 1 data length 1 sub {
				/index exch def
				size space add index mul 0 size radius
				data index get
				grayscale
				box
			} for
		grestore
	end
} def

/boxGrid {
	[/data /space /grayscale /radius /size /y /x]
	dup length 1 add dict begin {exch def} forall
		0 1 data length 1 sub {
			/index exch def
			x y size space add index mul add size radius grayscale space
			data index get
			boxRow
		} for
	end
} def

/cross {
	[/multiplier /size /y /x] dup length 0 add dict begin {exch def} forall
		gsave
			x y translate
			0 0 moveto
			size size lineto
		 	0 size moveto
			size 0 lineto
			currentlinewidth multiplier mul setlinewidth
			stroke
		grestore
	end
} def

/crossRow {
	[/data /space /multiplier /size /y /x]
	dup length 1 add dict begin {exch def} forall
		gsave
			x y translate
			0 1 data length 1 sub {
				/index exch def
				data index get {
					space index mul 0 size multiplier cross
				} if
			} for
		grestore
	end
} def

/crossGrid {
	[/data /space /multiplier /size /y /x]
	dup length 1 add dict begin {exch def} forall
		gsave
			x y translate
			0 1 data length 1 sub {
				/index exch def
				0 space index mul size multiplier space data index get crossRow
			} for
		grestore
	end
} def

/lightsOutConfig 5 dict def
lightsOutConfig begin
	/size 21 def
	/cornerRadius 5 def
	/buttonSpacing 3 def
	/fillColor 0.8 def
	/pressOffset 3 def
	/pressSize 5 def
	/pressMultiplier 2 def
end

/button {
	lightsOutConfig begin
		size cornerRadius 3 -1 roll fillColor box
	end
} def

/buttonRow {
	lightsOutConfig begin
		size cornerRadius fillColor buttonSpacing 5 -1 roll boxRow
	end
} def

/buttonGrid {
	lightsOutConfig begin
		size cornerRadius fillColor buttonSpacing 5 -1 roll boxGrid
	end
} def

/press {
	lightsOutConfig begin
		2 {pressOffset add exch} repeat
		pressSize pressMultiplier cross	
	end
} def

/pressRow {
	lightsOutConfig begin
		3 1 roll
		2 {pressOffset add exch} repeat
		3 -1 roll
		pressSize pressMultiplier size buttonSpacing add 4 -1 roll crossRow
	end
} def

/pressGrid {
	lightsOutConfig begin
		3 1 roll
		2 {pressOffset add exch} repeat
		3 -1 roll
		pressSize pressMultiplier size buttonSpacing add 4 -1 roll crossGrid
	end
} def

